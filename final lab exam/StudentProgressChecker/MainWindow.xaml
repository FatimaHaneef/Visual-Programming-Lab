<Window x:Class="StudentProgressTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Progress Tracker" Height="450" Width="800">
    <Grid>
        <!-- DataGrid for displaying students -->
        <DataGrid x:Name="StudentDataGrid" AutoGenerateColumns="False" 
                  HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Width="600" Height="300" Margin="10,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" />
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" />
                <DataGridTextColumn Header="Marks" Binding="{Binding Marks}" />
                <DataGridTextColumn Header="Attendance" Binding="{Binding Attendance}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons for Adding, Editing, Deleting, and Saving Students -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10">
            <Button Content="Add Student" Click="AddStudentButton_Click" Margin="5" />
            <Button Content="Edit Student" Click="EditStudentButton_Click" Margin="5" />
            <Button Content="Delete Student" Click="DeleteStudentButton_Click" Margin="5" />
            <Button Content="Save Changes" Click="SaveButton_Click" Margin="5" />
        </StackPanel>

        <!-- Filter ComboBox -->
        <ComboBox x:Name="FilterComboBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                  Margin="10,0,0,50" Width="200" SelectionChanged="FilterComboBox_SelectionChanged">
            <ComboBoxItem Content="All" />
            <ComboBoxItem Content="Grade" />
            <ComboBoxItem Content="Subject" />
        </ComboBox>

        <!-- ProgressBar -->
        <ProgressBar x:Name="TaskProgressBar" HorizontalAlignment="Stretch" 
                     VerticalAlignment="Bottom" Margin="10,0,10,100" 
                     Visibility="Collapsed" Height="20" />
    </Grid>
</Window>
